<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="pl.damiandziura.kontrolawydatkow.nowyPrzychod">
    <Button
        android:id="@+id/BtClear"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="wyczysc"
        android:text="@string/str_clear"
        app:layout_constraintLeft_toRightOf="@+id/btCofnij"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btAdd" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="38dp"
        android:onClick="dodajStalyDochod"
        android:text="@string/str_cykliczne"
        app:layout_constraintLeft_toRightOf="@+id/btDodaj"
        app:layout_constraintTop_toBottomOf="@+id/txtDate2" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="dodaj"
        android:text="@string/str_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btAdd" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btDodaj" />

    <TextView
        android:id="@+id/lblKwota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/str_kwota"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNazwa2" />

    <EditText
        android:id="@+id/txtEditAmount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/lblKwota"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLength="15"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lbldata"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:text="@string/str_data"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/txtDate2"
        app:layout_constraintTop_toTopOf="@+id/txtDate2"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/txtDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:onClick="WybierzDateGodzine"
        android:text="00-00-0000 11:12"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/SpinnerPodKategoriaWydatki" />

    <TextView
        android:id="@+id/lblNazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwaa"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/txtNazwa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="25"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/lblNazwa"
        app:layout_constraintTop_toBottomOf="@+id/lblNazwa" />

    <Spinner
        android:id="@+id/SpinnerPodKategoriaWydatki"
        android:layout_width="368dp"
        android:layout_height="32dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/SpinnerKategoriaWydatki"
        app:layout_constraintTop_toBottomOf="@+id/SpinnerKategoriaWydatki" />

    <Spinner
        android:id="@+id/SpinnerKategoriaWydatki"
        android:layout_width="368dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:popupBackground="@android:color/darker_gray"
        android:spinnerMode="dialog"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditAmount2" />
</android.support.constraint.ConstraintLayout>
