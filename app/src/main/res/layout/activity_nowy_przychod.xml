<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="pl.damiandziura.kontrolawydatkow.nowyPrzychod">
    <Button
        android:id="@+id/BtClear"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="wyczysc"
        android:text="@string/str_clear"
        app:layout_constraintLeft_toRightOf="@+id/btDodajKategorie"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btAdd" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="dodajStalyDochod"
        android:text="@string/str_staly_dochod"
        app:layout_constraintLeft_toRightOf="@+id/btDodaj"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="dodaj"
        android:text="@string/str_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btAdd"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btDodajKategorie"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btDodaj" />

    <TextView
        android:id="@+id/lblKwota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:text="@string/str_kwota"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtEditAmount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/lblKwota"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblData"
        android:layout_width="36dp"
        android:layout_height="23dp"
        android:layout_marginEnd="0dp"
        android:text="@string/str_data"
        app:layout_constraintRight_toLeftOf="@+id/txtDate"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@+id/txtDate"
        android:layout_marginTop="0dp" />

    <ExpandableListView
        android:id="@+id/ListViewPodkategoria"
        android:layout_width="165dp"
        android:layout_height="190dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/ListViewKategoria"

        app:layout_constraintTop_toBottomOf="@+id/txtEditAmount2" />

    <ExpandableListView
        android:id="@+id/ListViewKategoria"
        android:layout_width="165dp"
        android:layout_height="190dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ListViewPodkategoria"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/lblNazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwaa"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp" />

    <EditText
        android:id="@+id/txtNazwa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/lblNazwa"
        app:layout_constraintTop_toBottomOf="@+id/lblNazwa" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="128dp"
        android:layout_height="23dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:onClick="WybierzDateGodzine"
        android:text="00-00-0000 00:00"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />


</android.support.constraint.ConstraintLayout>
