<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="pl.damiandziura.kontrolawydatkow.DodajKategorie">

    <TextView
        android:id="@+id/lblNazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/str_nazwa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNazwa" />

    <Button
        android:id="@+id/btDodajPodKat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="dodajPodKat"
        android:text="@string/str_dodaj_podk"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/LVlistaPodkategorii"
        android:layout_marginLeft="105dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:onClick="dodaj"
        android:text="@string/str_add"
        app:layout_constraintLeft_toRightOf="@+id/btDodajKategorie"
        app:layout_constraintTop_toTopOf="@+id/btDodajKategorie" />

    <Button
        android:id="@+id/btDodajKategorie"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btDodajPodKat" />

    <ListView
        android:layout_width="378dp"
        android:layout_height="356dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        android:id="@+id/LVlistaPodkategorii"
        tools:layout_editor_absoluteX="5dp" />

</android.support.constraint.ConstraintLayout>
