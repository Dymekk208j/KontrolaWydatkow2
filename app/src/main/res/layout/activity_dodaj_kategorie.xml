<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="pl.damiandziura.kontrolawydatkow.DodajKategorie">

    <ListView
        android:id="@+id/ListViewPodkategoria"
        android:layout_width="371dp"
        android:layout_height="302dp"
        android:layout_marginTop="63dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/lblNazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwa"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/str_nazwa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNazwa" />

    <Button
        android:id="@+id/btUsun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:onClick="usun"
        android:text="@string/str_usun"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />

    <Button
        android:id="@+id/btZmienNazwe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:onClick="zmienNazwe"
        android:text="@string/str_zmien_nazwe"
        app:layout_constraintLeft_toRightOf="@+id/btUsun"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />

    <Button
        android:id="@+id/btDodajPodKat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:onClick="dodajPodKat"
        android:text="@string/str_dodaj_podk"
        app:layout_constraintLeft_toRightOf="@+id/btZmienNazwe"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:text="@string/str_add"
        app:layout_constraintLeft_toRightOf="@+id/btCofnij"
        app:layout_constraintTop_toTopOf="@+id/btCofnij"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/btUsun" />

    <Button
        android:id="@+id/btZatwierdz"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:onClick="zatwierdz"
        android:text="@string/str_zatwierdz"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/txtNazwaPodkat"
        app:layout_constraintTop_toTopOf="@+id/txtNazwaPodkat"
        android:layout_marginTop="0dp" />

    <TextView
        android:id="@+id/lblNazwaPodKat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/str_nazwa_pod"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/txtNazwaPodkat" />

    <EditText
        android:id="@+id/txtNazwaPodkat"
        android:layout_width="226dp"
        android:layout_height="32dp"
        android:layout_marginBottom="89dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/str_nazwa_pod"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/lblNazwaPodKat" />
</android.support.constraint.ConstraintLayout>
