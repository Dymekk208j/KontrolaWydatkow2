<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="pl.damiandziura.kontrolawydatkow.DodajKategorie">

    <TextView
        android:id="@+id/lblNazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwa"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="@string/str_nazwa"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNazwa"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btDodajPodKat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="dodajPodKat"
        android:text="@string/str_dodaj_podk"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/LVlistaPodkategorii"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/LVlistaPodkategorii" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:onClick="dodaj"
        android:text="@string/str_Zapisz"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btUsun"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btUsun"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btUsun" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="110dp"
        android:layout_height="66dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/btDodajPodKat"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/btDodajPodKat"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/btDodajPodKat"
        app:layout_constraintHorizontal_bias="0.512" />

    <ListView
        android:id="@+id/LVlistaPodkategorii"
        android:layout_width="380dp"
        android:layout_height="284dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:text="@string/strPodkat"
        app:layout_constraintBottom_toTopOf="@+id/LVlistaPodkategorii"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btUsun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#ff0000"
        android:onClick="usun"
        android:text="@string/str_usunkat"
        app:layout_constraintLeft_toRightOf="@+id/editText"
        app:layout_constraintTop_toBottomOf="@+id/LVlistaPodkategorii" />

</android.support.constraint.ConstraintLayout>
