<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.damiandziura.kontrolawydatkow.Kategorie">

    <Button
        android:id="@+id/button4"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="8dp"
        android:onClick="dodaj"
        android:text="@string/str_add"
        app:layout_constraintLeft_toRightOf="@+id/btEdytuj"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />

    <ListView
        android:id="@+id/ListViewPodkategoria"
        android:layout_width="368dp"
        android:layout_height="362dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btEdytuj"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_edytuj"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="138dp"
        android:layout_height="53dp"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="74dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        app:layout_constraintLeft_toLeftOf="@+id/btEdytuj"
        app:layout_constraintTop_toBottomOf="@+id/btEdytuj" />
</android.support.constraint.ConstraintLayout>
