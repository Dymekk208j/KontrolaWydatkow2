<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.damiandziura.kontrolawydatkow.AddNewExpenses">

    <Button
        android:id="@+id/BtClear"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="wyczysc"
        android:text="@string/str_clear"
        app:layout_constraintLeft_toRightOf="@+id/btCofnij"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btAdd" />

    <Button
        android:id="@+id/btAdd"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="DodajStalyWydatek"
        android:text="@string/str_add2"
        app:layout_constraintLeft_toRightOf="@+id/btDodaj"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/txtDate2" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="16dp"
        android:onClick="dodaj"
        android:text="@string/str_add"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btAdd"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="157dp"
        android:layout_height="83dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btDodaj" />

    <TextView
        android:id="@+id/lblKwota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="@string/str_kwota"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNazwa2" />

    <EditText
        android:id="@+id/txtEditAmount2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/lblKwota"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:maxLength="15"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ExpandableListView
        android:id="@+id/ListViewKategoria"
        style="@android:style/Widget.ExpandableListView"
        android:layout_width="154dp"
        android:layout_height="52dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEditAmount2" />

    <TextView
        android:id="@+id/lbldata"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:text="@string/str_data"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/txtDate2"
        app:layout_constraintTop_toTopOf="@+id/txtDate2" />

    <TextView
        android:id="@+id/txtDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="41dp"
        android:layout_marginTop="59dp"
        android:onClick="WybierzDateGodzine"
        android:text="00-00-0000 11:12"
        android:textStyle="italic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListViewPodkategoria" />

    <TextView
        android:id="@+id/lblNazwa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwaa"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/txtNazwa2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:ems="10"
        android:maxLength="25"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="@+id/lblNazwa"
        app:layout_constraintTop_toBottomOf="@+id/lblNazwa" />

    <ExpandableListView
        android:id="@+id/ListViewPodkategoria"
        android:layout_width="173dp"
        android:layout_height="57dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="27dp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/ListViewKategoria"
        app:layout_constraintTop_toBottomOf="@+id/txtEditAmount2" />

</android.support.constraint.ConstraintLayout>
