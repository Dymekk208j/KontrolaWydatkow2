                android:text="@string/str_ost_doch" />

            <TextView
                android:id="@+id/TxtOstatniDochod9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ost_doch" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
