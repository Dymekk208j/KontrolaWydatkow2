<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.damiandziura.kontrolawydatkow.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/BtKat"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="kategorie"
        android:text="@string/str_kategorie"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/BtMainAdd2"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="dodajdochod"
        android:text="@string/str_dodaj_dochod"
        app:layout_constraintBottom_toTopOf="@+id/BtInfo"
        app:layout_constraintLeft_toRightOf="@+id/BtMainAdd" />

    <Button
        android:id="@+id/BtInfo"
        android:layout_width="157dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:onClick="Informacje"
        android:text="@string/str_informacje"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/BtKat" />

    <Button
        android:id="@+id/BtMainAdd"
        android:layout_width="158dp"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:onClick="dodajWydatek"
        android:text="@string/str_dodaj_wydatek"
        app:layout_constraintBottom_toTopOf="@+id/BtKat"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/str_posSrodki"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="109dp"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="180dp"
        android:layout_height="222dp"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintTop_toTopOf="@+id/scrollView3"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toRightOf="@+id/scrollView3"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtLastExpenses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="@string/str_ostatnie_wydatki" />

            <TextView
                android:id="@+id/TxtLastExp0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

            <TextView
                android:id="@+id/TxtLastExp9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ostatniwydatek" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="180dp"
        android:layout_height="222dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TxtOstatniDochod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:text="@string/str_ostatni_dochod" />

            <TextView
                android:id="@+id/TxtOstatniDochod0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ost_doch" />

            <TextView
                android:id="@+id/TxtOstatniDochod1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ost_doch" />

            <TextView
