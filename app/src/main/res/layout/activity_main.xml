                android:text="@string/str_ost_doch" />

            <TextView
                android:id="@+id/TxtOstatniDochod6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_ost_doch" />

            <TextView
                android:id="@+id/TxtOstatniDochod7"
                android:layout_width="match_parent"
