<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.damiandziura.kontrolawydatkow.Dodajpodkategorie">

    <Button
        android:id="@+id/btUsun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:onClick="usun"
        android:text="@string/str_usun"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/txtPodKatName"
        app:layout_constraintTop_toBottomOf="@+id/txtPodKatName" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="263dp"
        android:onClick="dodaj"
        android:text="@string/str_add"
        app:layout_constraintTop_toBottomOf="@+id/txtPodKatName"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:onClick="cofnij"
        android:text="@string/stre_back"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btDodaj" />

    <EditText
        android:id="@+id/txtPodKatName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="@string/str_nazwa_pod"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/lblWindowNamePodKat" />

    <TextView
        android:id="@+id/lblWindowNamePodKat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/str_dodaj_podk"
        android:textSize="36sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
