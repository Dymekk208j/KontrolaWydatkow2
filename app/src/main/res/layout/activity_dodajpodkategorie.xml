<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.damiandziura.kontrolawydatkow.Dodajpodkategorie">

    <Button
        android:id="@+id/btUsun"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="@string/str_usun"
        app:layout_constraintTop_toBottomOf="@+id/btDodaj"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btDodaj"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="73dp"
        android:text="@string/str_add"
        app:layout_constraintTop_toBottomOf="@+id/txtPodKatName"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/stre_back"
        app:layout_constraintTop_toBottomOf="@+id/btUsun"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/txtPodKatName"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/lblName"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/lblName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_nazwa_pod"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="96dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />
</android.support.constraint.ConstraintLayout>
