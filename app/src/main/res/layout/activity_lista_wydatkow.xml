<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="pl.damiandziura.kontrolawydatkow.ListaWydatkow">

    <Button
        android:id="@+id/btCofnij"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/stre_back" />

    <ListView
        android:id="@+id/LPlist"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/btCofnij"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ListView
        android:id="@+id/DataList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btCofnij"
        android:layout_alignLeft="@+id/btCofnij"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btCofnij" />

    <ListView
        android:id="@+id/NameList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/btCofnij"
        android:layout_toLeftOf="@+id/btCofnij"
        android:layout_toRightOf="@+id/LPlist"
        android:layout_toEndOf="@+id/LPlist" />
</RelativeLayout>
